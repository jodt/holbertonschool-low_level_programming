CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -rf

all: $(NAME)

main.o: main.c
	$(CC) -c -o main.o main.c

school.o: school.c
	$(CC) -c -o school.o school.c

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *.c~ $(OBJ) $(NAME)

re: oclean all